<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title Integrated Testing Suite</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Images/abc-logo-login.png" href="/Home/Index" </img> | Integrated Testing Suite</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        <i  class="glyphicon glyphicon-user" aria-hidden="true"  style="font-size: 20px;" ></i><span class="username">  @User.Identity.Name</span>
                    </section>

                    <nav>
                        <ul id="menu">
                            <li><a href="/Home/Index" class="elements"><span>Connect</span></a></li>
                            <li><a href="/Home/CoreMeasures" class="elements"><span>Core Measures</span></a></li>
                            <li><a href="/DataSniffer/DataSniffer" class="elements"><span>Data Sniffer</span></a></li>                            
                            <li title="Coming Soon!">Data Prober</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - The Advisory Board Company</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
